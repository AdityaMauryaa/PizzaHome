# Production Environment Variables
# Copy this file to .env in production and replace with actual values

# MongoDB Atlas Production Cluster (MUST include database name in URI)
MONGO_URI=mongodb+srv://username:password@production-cluster.mongodb.net/pizzahome?retryWrites=true&w=majority

# Server Port (or leave empty to use hosting provider's PORT)
PORT=3000

# JWT Secret - MUST be a strong random string (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_STRONG_64_CHAR_RANDOM_STRING_HERE

# Allowed Origins - Your production frontend URLs (comma-separated, no spaces)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Environment
NODE_ENV=production

# Optional: Database name
DB_NAME=pizzahome

# Optional: Session settings
SESSION_TIMEOUT=86400000
